{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../config/*.yml",
        "outDir": "./dist/backend/config"
      },
      {
        "include": "**/*.json",
        "outDir": "./dist/backend/src/"
      }
    ]
  },
  "entryFile": "backend/src/main.js"
}
